{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        // Target and Module
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        // Module Resolution
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        // Emit
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        // Type Checking
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        // Interop
        "esModuleInterop": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        // Advanced
        "allowJs": false
    },
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage",
        "**/*.test.*",
        "**/*.spec.*",
        "**/__tests__/**"
    ]
}