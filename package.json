{
  "name": "rich-text-editor",
  "version": "0.1.0",
  "private": true,
  "description": "Rich text editor monorepo with WASM core and framework bindings",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:wasm": "cd packages/wasm && wasm-pack build --target bundler --out-dir ../core/wasm",
    "build:core": "cd packages/core && pnpm run build",
    "build:react": "cd packages/react && pnpm run build",
    "build:solid": "cd packages/solid && pnpm run build",
    "build:svelte": "cd packages/svelte && pnpm run build",
    "build": "pnpm run build:wasm && pnpm run build:core && pnpm run build:react && pnpm run build:solid && pnpm run build:svelte",
    "build:all": "pnpm -r --filter ./packages/* run build",
    "dev": "pnpm -r --parallel --filter \"./packages/{core,react,solid,svelte}\" run dev",
    "test": "pnpm --filter ./packages/* run test",
    "test:watch": "pnpm --filter ./packages/* --parallel run test:watch",
    "lint": "pnpm --filter ./packages/* run lint",
    "lint:fix": "pnpm --filter ./packages/* run lint:fix",
    "typecheck": "pnpm --filter ./packages/* run typecheck",
    "clean": "pnpm -r exec rm -rf dist node_modules && rm -rf node_modules packages/core/wasm",
    "clean:dist": "pnpm -r exec rm -rf dist && rm -rf packages/core/wasm",
    "version:check": "node scripts/version-manager.js check",
    "version:patch": "node scripts/version-manager.js bump patch",
    "version:minor": "node scripts/version-manager.js bump minor",
    "version:major": "node scripts/version-manager.js bump major",
    "publish:dry-run": "node scripts/publish-helper.js dry-run",
    "publish:check": "node scripts/publish-helper.js check",
    "release:prepare": "pnpm run clean:dist && pnpm run build && pnpm run test && pnpm run typecheck",
    "release:tag": "node scripts/version-manager.js tag"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vite": "^5.1.0",
    "vite-plugin-solid": "^2.11.10",
    "@sveltejs/vite-plugin-svelte": "^2.0.0"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "keywords": [
    "wasm",
    "webassembly",
    "rust",
    "editor",
    "rich-text",
    "text-editor",
    "monorepo"
  ],
  "author": "Rishabh Kumar <rishabh.6542@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rockerrishabh/rich-text-editor-wasm"
  },
  "bugs": {
    "url": "https://github.com/rockerrishabh/rich-text-editor-wasm/issues"
  },
  "homepage": "https://github.com/rockerrishabh/rich-text-editor-wasm#readme"
}