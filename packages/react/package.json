{
  "name": "@rockerrishabh/rich-text-editor-react",
  "version": "0.1.0",
  "description": "React bindings for rich text editor",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --clean --external react --external react-dom && tsc -p tsconfig.json",
    "dev": "tsup src/index.ts --format cjs,esm --watch --external react --external react-dom",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "rich-text-editor",
    "react",
    "editor",
    "react-component",
    "wysiwyg"
  ],
  "author": "Rishabh Kumar <rishabh.6542@gmail.com> (https://github.com/rockerrishabh)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rockerrishabh/rich-text-editor-wasm.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/rockerrishabh/rich-text-editor-wasm/issues"
  },
  "homepage": "https://github.com/rockerrishabh/rich-text-editor-wasm#readme",
  "peerDependencies": {
    "@rockerrishabh/rich-text-editor-core": "^0.1.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@rockerrishabh/rich-text-editor-core": "workspace:*",
    "eslint": "^8.39.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  }
}