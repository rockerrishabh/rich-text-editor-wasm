{
  "name": "@rockerrishabh/rich-text-editor-svelte",
  "version": "0.1.0",
  "description": "Svelte bindings for rich text editor",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "svelte": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --clean --external svelte && tsc -p tsconfig.json",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --external svelte",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.svelte",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "rich-text-editor",
    "svelte",
    "editor",
    "svelte-component",
    "wysiwyg"
  ],
  "author": "Rishabh Kumar <rishabh.6542@gmail.com> (https://github.com/rockerrishabh)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rockerrishabh/rich-text-editor.git",
    "directory": "packages/svelte"
  },
  "bugs": {
    "url": "https://github.com/rockerrishabh/rich-text-editor/issues"
  },
  "homepage": "https://github.com/rockerrishabh/rich-text-editor#readme",
  "peerDependencies": {
    "@rockerrishabh/rich-text-editor-core": "^0.1.0",
    "svelte": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@rockerrishabh/rich-text-editor-core": "workspace:*",
    "eslint": "^8.39.1",
    "svelte": "^5.43.12",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  }
}