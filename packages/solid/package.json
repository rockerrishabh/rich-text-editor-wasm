{
  "name": "@rockerrishabh/rich-text-editor-solid",
  "version": "0.1.0",
  "description": "Solid bindings for rich text editor",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --clean --external solid-js && tsc -p tsconfig.json",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --external solid-js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "rich-text-editor",
    "solid",
    "solidjs",
    "editor",
    "solid-component",
    "wysiwyg"
  ],
  "author": "Rishabh Kumar <rishabh.6542@gmail.com> (https://github.com/rockerrishabh)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rockerrishabh/rich-text-editor.git",
    "directory": "packages/solid"
  },
  "bugs": {
    "url": "https://github.com/rockerrishabh/rich-text-editor/issues"
  },
  "homepage": "https://github.com/rockerrishabh/rich-text-editor#readme",
  "peerDependencies": {
    "@rockerrishabh/rich-text-editor-core": "^0.1.0",
    "solid-js": "^1.8.0"
  },
  "devDependencies": {
    "@rockerrishabh/rich-text-editor-core": "workspace:*",
    "eslint": "^8.39.1",
    "solid-js": "^1.9.10",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  }
}